<div id="get-coupons" class="container-fluid my-3 position-relative" v-cloak>
  <div class="row mt-5">
    <div class="col-lg-12 d-flex justify-content-between align-items-center">
      <div class="w-100">
        <h4 class="card-title mt-0">Search Coupon</h4>
        <p class="card-category">Type to filter Coupon</p>
      </div>

      <div class="input-group input-group-outline w-100">
        <!-- <label class="bmd-label-floating">Search by Transaction ID</label> -->
        <input type="text" class="form-control" id="searchInput" placeholder="Search By Coupon Code">
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12 d-flex justify-content-end gap-2">
        <a class="btn btn-info" href="/coupon/generate">Generate Coupon</a>
      </div>
    </div>

    <div class="row">
      <div class="col-xl-12">
        <% if (coupons.length> 0) { %>
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-info shadow-info border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Audiobaze Coupons</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0" style="overflow-x:auto;">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Coupon Code
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Type</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        Discount Percentage (%)
                      </th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">No.
                        Of Uses Left
                      </th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% coupons.forEach(coupon=> { %>
                    <tr id="orders" class="order-row">
                      <td>
                        <div class="d-flex px-2 py-1">
                          <h6 class="mb-0 text-sm couponcode">
                            <%= coupon.coupon %>
                          </h6>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">
                          <% if (coupon.type==='auto-generated' ) { %>
                          Auto Generated
                          <% } else { %>
                          Custom
                          <% } %>
                        </p>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= coupon.discountAmount %>%
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">
                          <%= coupon.noOfUsesLeft %>
                        </span>
                      </td>
                      <td>
                        <a class="btn-primary btn text-white" @click="deleteCoupon(`<%= coupon.id %>`)">Delete</a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <% } else {%>

        <div class="d-flex justify-content-center align-items-center">
          <h3>There are No Generated Coupons</h3>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
